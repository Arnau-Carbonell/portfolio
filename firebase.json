{
  "hosting": {
    "public": "build/web",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "/files/**",
        "headers": [
          {
            "key": "Content-Type",
            "value": "application/pdf"
          },
          {
            "key": "Content-Disposition",
            "value": "attachment; filename=\"CV_ArnauCarbonell.pdf\""
          }
        ]
      }
    ],

    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
